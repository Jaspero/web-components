@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  --primary: #32664c;
  --primary-contrast: #FFFFFF
  --secondary: #E66439;
  --secondary-contrast: #FFFFFF;
  --warning: #F6AE2D;
  --error: #E66439;
  --success: #3CB371;

  --fg: #FFFFFF
}

html {
  box-sizing: border-box;
}

*,
*::before,
*::after {
  box-sizing: inherit;
}

label {
  @apply text-xs font-bold;
}

input,
select,
textarea {
  @apply border-2 rounded-lg px-2 py-1 text-xs;
}
