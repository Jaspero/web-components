.jp-ckeditor {
  --ck-border-radius: var(--border-radius, 0.25rem);
  --ck-focus-ring: 1px solid var(--primary-color);
  --ck-inner-shadow: inset 0 0 0 1px var(--primary-color);

  &-user-invalid {
    border: 1px solid var(--danger-color);
  }
}

.jp-ckeditor-label {
  margin-top: 0.5rem;
  margin-bottom: 0.125rem;
  font-size: 0.875rem;
}

.jp-ckeditor-textarea {
  display: none;
}
