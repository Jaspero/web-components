{
  "name": "@jaspero/web-components",
  "description": "A collection of web-components",
  "version": "0.0.0-development",
  "type": "module",
  "main": "dist/lib/@jaspero/web-components.js",
  "scripts": {
    "start": "npm run dev -s",
    "dev": "concurrently \"npm run dev:demo\" \"npm run dev:lib\"",
    "dev:demo": "vite --config vite.demo.config.ts",
    "dev:lib": "vite build --watch",
    "build": "vite build",
    "build:demo": "vite build --config vite.demo.config.ts",
    "preview": "vite preview --config vite.demo.config.ts",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "prepublishOnly": "npm run build -s",
    "format": "prettier --plugin-search-dir . --write .",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "2.4.2",
    "@tsconfig/svelte": "5.0.0",
    "autoprefixer": "10.4.14",
    "concurrently": "8.2.0",
    "firebase": "10.1.0",
    "postcss": "8.4.31",
    "prettier": "3.0.0",
    "prettier-plugin-svelte": "3.0.0",
    "semantic-release": "^21.0.7",
    "svelte": "4.1.1",
    "svelte-check": "3.4.6",
    "svelte-preprocess": "5.0.4",
    "tailwindcss": "3.3.3",
    "tslib": "2.6.0",
    "typescript": "5.1.6",
    "vite": "4.4.6",
    "vite-plugin-static-copy": "0.17.0"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "keywords": [
    "web-components",
    "svelte"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Jaspero/web-components.git"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "engines": {
    "node": ">=16.14"
  }
}
